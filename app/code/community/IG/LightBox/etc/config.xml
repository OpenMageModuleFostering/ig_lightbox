<config>
	<modules>
		<IG_LightBox>
			<version>1.0.3</version>
		</IG_LightBox>
	</modules>

	<global>
		<helpers>
			<ig_lightbox>
				<class>IG_LightBox_Helper</class>
			</ig_lightbox>
        </helpers>
		<resources>
			<ig_lightbox_setup>  
				<setup>  
					<module>IG_LightBox</module>  
				</setup>  
				<connection>  
					<use>core_setup</use>  
				</connection>  
			</ig_lightbox_setup>  
			
			<ig_lightbox_write>  
				<connection>  
					<use>core_write</use>  
				</connection>  
			</ig_lightbox_write>  
			
			<ig_lightbox_read>  
				<connection>  
					<use>core_read</use>  
				</connection>  
			</ig_lightbox_read>  
        </resources>
	</global>
	
	<frontend>
		<routers>
			<ig_lightbox>
				<use>standard</use>
				<args>
					<module>IG_LightBox</module>
					<frontname>ig_lightbox</frontname>
				</args>
			</ig_lightbox>
		</routers>

		<layout>
			<updates>
				<ig_lightbox module="IG_LightBox">
					<file>ig_lightbox.xml</file>
				</ig_lightbox>
			</updates>
		</layout>
	</frontend>

	<adminhtml>
		<translate>
			<modules>
				<ig_lightbox>
					<files>
						<default>IG_LightBox.csv</default>
					</files>
				</ig_lightbox>
			</modules>
        </translate>
		<acl>
			<resources>
				<admin>
					<children>
						<system>
							<children>
								<config>
									<children>
										<ig_lightbox translate="title" module="ig_lightbox">
											<title>IG LightBox</title>
											<sort_order>50</sort_order>
										</ig_lightbox>
									</children>
								</config>
							</children>
						</system>
					</children>
				</admin>
			</resources>
		</acl>
    </adminhtml>
</config>
